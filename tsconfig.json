{
    "compilerOptions": {
      "outDir": "./lib",       // Output directory for compiled files
      "rootDir": "./src",       // Root directory of source files
      "module": "commonjs",
      "target": "es6",
      "strict": true,
      "declaration": true,
      "emitDeclarationOnly": true,
    },
    "include": [
      "src/**/*"               // Include all files in src
    ],
    "exclude": ["node_modules"]
  }